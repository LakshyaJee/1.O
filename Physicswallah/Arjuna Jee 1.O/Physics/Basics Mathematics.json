<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=0.73">
    <style>
        body {
            background-color: #f0f0f0;
            font-family: Arial, sans-serif;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            
        }

        table {
            width: 80%;
            border-collapse: collapse;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        table,
        th,
        td {
            border: 1px solid black;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
        }

        button {
            cursor: pointer;
            background-color: #4caf50;
            color: #fff;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
            border-radius: 5px;
        }

        button:hover {
            background-color: white;
            color: black;
            border: 1px solid #a6cbe4;
        }

        @media (max-width: 760px) {
            table {
                width: 95%;
            }

            button {
                background-color: #fff;
                color: #000;
                border: 1px solid #ccc;
            }

            button:hover {
                background-color: #ccc;
            }
        }
    </style>
</head>

<body>

    <table>
        <tr>
            <th>Sr. No</th>
            <th>Lecture Number</th>
            <th>Lecture</th>
            <th>Class Notes PDF</th>
            <th>DPP PDF</th>
        </tr>
    </table>

    <script>
let lessonName = "Basics Mathematics";
const lectureData= [
{
    "lectureNumber": 1,
    "lectureName": "Basic Mathematics 01 : Quadratic Equation and Slope || No DPP",
    "lectureCode": "6a766864-be38-42d6-b110-e51457b68311",
    "classNotesPdf": "",
    "dppsPdfCode": "",
  },
  {
    "lectureNumber": 2,
    "lectureName": "Basic Mathematics 02 : Graphs and Series",
    "lectureCode": "62548a23-4053-4e62-805a-c4b8104da2d2",
    "classNotesPdf": "",
    "dppsPdfCode": "",
  },
  {
    "lectureNumber": 3,
    "lectureName": "Basic Mathematics 03 : Graphs and Trigonometry",
    "lectureCode": "34ffeb9d-053a-4e80-bf6e-1d2b7cb94b49",
    "classNotesPdf": "",
    "dppsPdfCode": "",
  },
  {
    "lectureNumber": 4,
    "lectureName": "Basic Mathematics 04 : Trigonometry || Series || Area & Volume",
    "lectureCode": "85ea94fa-ddbd-4293-8784-28466e34158f",
    "classNotesPdf": "",
    "dppsPdfCode": "",
  },
  {
    "lectureNumber": 5,
    "lectureName": "Basic Mathematics 05 : Differentiation || No DPP",
    "lectureCode": "a3205af7-8fff-447d-903a-25a1dea2b255",
    "classNotesPdf": "",
    "dppsPdfCode": "",
  },
  {
    "lectureNumber": 6,
    "lectureName": "Basic Mathematics 06 : Differentiation Formula & Its Rules",
    "lectureCode": "5b2d571f-3df3-4c7c-9636-14fd74a8bbcc",
    "classNotesPdf": "",
    "dppsPdfCode": "",
  },
  {
    "lectureNumber": 7,
    "lectureName": "Basic Mathematics 07 : Chain Rule in Differentiation & Slope Analysis",
    "lectureCode": "e7db1e6c-8077-4624-942b-b4097c232ce4",
    "classNotesPdf": "",
    "dppsPdfCode": "",
  },
  {
    "lectureNumber": 8,
    "lectureName": "Basic Mathematics 08 : Maxima and Minima || No DPP",
    "lectureCode": "7b3ebea6-8417-42d0-98d7-8f33c7c0774c",
    "classNotesPdf": "",
    "dppsPdfCode": "",
  },
  {
    "lectureNumber": 9,
    "lectureName": "Basic Mathematics 09 : Maxima, Minima & Integration || No DPP",
    "lectureCode": "c90d0286-937f-4da1-81f3-4f9124192624",
    "classNotesPdf": "",
    "dppsPdfCode": "",
  },
  {
    "lectureNumber": 10,
    "lectureName": "Basic Mathematics 10 : Integration and Doubts",
    "lectureCode": "074706c6-547e-4e55-a579-e79e432479dc",
    "classNotesPdf": "",
    "dppsPdfCode": "",
  },
];

        function generateClassNotesLink(classNotesCode) {
            const baseUrl = "https://d2bps9p1kiy4ka.cloudfront.net/5eb393ee95fab7468a79d189/";
            return baseUrl + classNotesCode;
        }

        function generateDPPLink(dppCode) {
            if (dppCode) {
                const baseUrl = "https://d2bps9p1kiy4ka.cloudfront.net/5eb393ee95fab7468a79d189/";
                return baseUrl + dppCode;
            }
            return '';
        }

        function openPDFInNewWindow(pdfUrl) {
            // Open the PDF in a new window with the PDF.js viewer
            const viewerUrl = 'https://mozilla.github.io/pdf.js/web/viewer.html?file=';
            const newWindow = window.open(viewerUrl + encodeURIComponent(pdfUrl), '_blank');
            newWindow.focus();
        }

        function showQualityOptions(index) {
            const lecture = lectureData[index];

            // Open quality-select.html with lecture link
            const qualitySelectUrl = `quality-select.html?lessonName=${lessonName}&lectureCode=${lecture.lectureCode}`;
            window.open(qualitySelectUrl, '_blank');
        }

        function generateTable() {
            const table = document.querySelector('table');

            lectureData.forEach((lecture, index) => {
                const row = table.insertRow();
                row.insertCell(0).textContent = index + 1;
                row.insertCell(1).textContent = lecture.lectureName;

                const cell3 = row.insertCell(2);
                cell3.innerHTML = `
                    <button onclick="showQualityOptions(${index})">View Lecture</button>
                `;

                const cell4 = row.insertCell(3);
                cell4.innerHTML = `
                    <button onclick="openPDFInNewWindow('${generateClassNotesLink(lecture.classNotesCode)}')">Class Notes PDF</button>
                `;

                const cell5 = row.insertCell(4);
                if (lecture.dppsPdfCode) {
                    cell5.innerHTML = `
                        <button onclick="openPDFInNewWindow('${generateDPPLink(lecture.dppsPdfCode)}')">DPP PDF</button>
                    `;
                }
            });
        }

        generateTable();
    </script>
</body>

</html>